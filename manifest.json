{
  "name": "Download Virus Checker",
  "short_name": "idvchecker",
  "description": "Automatically check all the downloads files against well-known anti-viruses using VirusTotal API",
  "author": "James Fray",
  "version": "0.1.0",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "downloads",
    "notifications",
    "https://www.virustotal.com/*"
  ],
  "background": {
    "scripts": [
      "common.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png"
    }
  },
  "homepage_url": "http://add0n.com/virus-checker.html",
  "icons": {
    "16": "data/icons/16.png",
    "48": "data/icons/48.png",
    "128": "data/icons/128.png"
  },
  "options_ui": {
    "page": "data/options/index.html",
    "chrome_style": true
  }
}
